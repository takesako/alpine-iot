# Contributor: Yoshinori Takesako <takesako@namazu.org>
# Maintainer:
pkgname=gcc-avr
pkgver=3.5.4
pkgrel=0
pkgdesc="GNU C Compiler (cross compiler for avr)"
url="http://distribute.atmel.no/tools/opensource/Atmel-AVR-GNU-Toolchain/"
arch="all"
license="GPL3+"
depends=""
makedepends="binutils-avr gmp-dev mpfr-dev mpc1-dev bison flex gperf"
install=""
subpackages="$pkgname-dev $pkgname-doc"
source="http://distribute.atmel.no/tools/opensource/Atmel-AVR-GNU-Toolchain/3.5.4/avr-gcc.tar.bz2
	cfns.h.patch
	"
builddir="$srcdir/gcc"

build() {
	mkdir -p "$builddir/build"
	cd "$builddir/build"
	../configure \
		--build=$CBUILD \
		--host=$CHOST \
		--target=avr \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--disable-nls \
		--enable-languages=c \
		--with-system-zlib \
		--enable-shared \
		--without-included-gettext \
		--disable-libssp \
		--enable-long-long \
		|| return 1
	make || return 1
}

package() {
	cd "$builddir/build"
	make DESTDIR="$pkgdir" install || return 1
}

