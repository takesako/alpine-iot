# Maintainer:
pkgname=avr-libc
pkgver=3.5.4
pkgrel=0
pkgdesc="Standard C library for Atmel AVR develpoment"
url="http://distribute.atmel.no/tools/opensource/Atmel-AVR-GNU-Toolchain/"
arch="all"
license="GPL3+"
depends=""
makedepends="binutils-avr gcc-avr autoconf automake"
install=""
subpackages="$pkgname-dev $pkgname-doc"
source="http://distribute.atmel.no/tools/opensource/Atmel-AVR-GNU-Toolchain/$pkgver/avr-libc.tar.bz2
	http://distribute.atmel.no/tools/opensource/Atmel-AVR-GNU-Toolchain/$pkgver/avr8-headers.zip
	"
builddir="$srcdir/libc/avr-libc"

build() {
	cd "$builddir"
	aclocal
	autoheader
	automake --add-missing --copy
	autoconf
	./configure \
		--build=$CBUILD \
		--host=avr \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		|| return 1
	make || return 1
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install || return 1
}

